(*# MixedStateChoice #*)

(* A machine with two emergency stop buttons, any button press
triggers the stop, and after stopping the machine notifies the buttons
so they can turn on an alert light.
*)


global protocol TwoBigRedButtons (role M, role A, role B) {
  choice at M {
    STOP from A to M ; (*) request the machine to stop
    STOPPED from M to A ; (*) the machine notifies both buttons it stoped, so they can turn on an alert light.
    STOPPED from M to B ;
  } or {
    STOP from B to M ;
    STOPPED from M to A ;
    STOPPED from M to B ;
  }
}
